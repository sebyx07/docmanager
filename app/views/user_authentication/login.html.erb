<div class="row">
  <div class="col-sm-6 col-sm-offset-3">

    <%= form_for @user, url: {action: 'login_form'}, html: {class: 'login-form'} do  |f| %>
        <h2 class="form-signin-heading">Please sign in</h2>

        <%= label_tag(:username, 'Username', class: 'sr-only') %>
        <%= f.text_field :username, placeholder: 'Username', class: 'form-control', autofocus: true, required: 'true' %>

        <br/>

        <%= label_tag(:password, 'Password', class: 'sr-only') %>
        <%= f.password_field :password, placeholder: 'Password', class: 'form-control', required: 'true' %>

        <br/>
        <%= f.submit 'Login', class: 'btn btn-lg btn-primary btn-block' %>

        <br/>

        <%= link_to 'Register', register_path %>
    <% end %>
  </div>
</div>
