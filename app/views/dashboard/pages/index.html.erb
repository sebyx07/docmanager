<div class="row">
  <div class="col-sm-2 col-sm-offset-10">
    <%= link_to 'Create new document', dashboard_documents_new_path, class: 'btn btn-info' %>
  </div>
</div>

<div class="row">
  <h3>Search documents</h3>
  <%= form_tag dashboard_search_document_path, method: :get do %>
      <%= text_field_tag :q, nil, class: 'form-group' %>
      <%= submit_tag('Search') %>
  <% end %>
</div>
<div class="row">
  <div class="col-sm-8">
    <h4>My documents</h4>
    <ul class="list-group">
      <%= render partial: 'document_list', locals: { documents: @users_documents } %>
    </ul>
  </div>

  <div class="col-sm-4">
    <h4>Others documents</h4>

    <%= render partial: 'document_list', locals: { documents: @other_documents } %>
  </div>
</div>